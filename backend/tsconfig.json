{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",  
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": [
      "src/**/*"  
    ],
    "exclude": [
      "node_modules"
    ]
  }
  